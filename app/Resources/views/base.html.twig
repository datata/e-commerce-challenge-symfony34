                            <a href="#">GAFAS GEEK NINJA</a>
                            <a href="#">GAFAS GEEK FROG</a>

                            <a href="{{path('admin_panel')}}">Panel de administrador</a>
                        </div>


                    {% else %}
                        <div class="sidenav" id="mySidenav">
                            <a class="closebtn" href="javascript:void(0)" onclick="closeNav()">&times;</a>
                            
                            <h5 style="background-color:orange;color:white;">TODAS LAS SECCIONES</h5>
                                                       
                            <a href="#">GAFAS GEEK MAN</a>
                            <a href="#">GAFAS GEEK WOMAN</a>
                            <a href="#">GAFAS GEEK NINJA</a>
                            <a href="#">GAFAS GEEK FROG</a>
                            <a href="{{path('user_profile')}}">Panel de usuario</a>

                        </div>


                    {% endif %}
                {% else %}
                    <div class="sidenav" id="mySidenav">
                        <a class="closebtn" href="javascript:void(0)" onclick="closeNav()">&times;</a>
                        <a href="#" style="background-color:orange;">TODAS LAS SECCIONES</a>
                        
                        <a href="#">GAFAS GEEK MAN</a>
                        <a href="#">GAFAS GEEK WOMAN</a>
                        <a href="#">GAFAS GEEK NINJA</a>
                        <a href="#">GAFAS GEEK FROG</a>
                    </div>
                {% endif %}


                <!-- Use any element to open the sidenav -->
                <img src="{{asset('img/begeek.png')}}" style="width:40px;">
                <button class="btn" onclick="openNav()"><i class="fa fa-bars"></i></button>

                <a class="navbar-brand" href="/shop">MySunglassesShop</a>
                <button aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarNav" data-toggle="collapse" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto ">
                        {% if app.user %}

                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('logout')}}">Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('register')}}">Register</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('login')}}">Login</a>
                            </li>
                        {% endif %}
                    </ul>

                    {% if app.user %}
                        <a href="/shop/cart/{{app.user.id}}">
                            <button class="btn btn-outline-success my-2 my-sm-0">Carrito</button>
                        </a>
                    {% endif %}

                </div>
            </nav>


            <main>
                <div class="mainwrapper">

                    <div class="container"> {% block body %}{% endblock %}

                        </div>
                    </div>
                </main>

                <!-- Footer -->
                <footer class="page-footer font-small">

                    <div class="footer-copyright text-center py-3">Â© 2019 Copyright:
