{% extends 'base.html.twig' %}

{% block body %}
    <h1>Brands list</h1>

    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td><a style="color:white;" href="{{ path('brand_show', { 'id': brand.id }) }}">{{ brand.id }}</a></td>
                <td>{{ brand.brand }}</td>
                <td>
                    
                            <a class="btn btn-primary" href="{{ path('brand_show', { 'id': brand.id }) }}">show</a>
                        
                            <a class="btn btn-warning" href="{{ path('brand_edit', { 'id': brand.id }) }}">edit</a>
                       
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
            <a class="btn btn-success" href="{{ path('brand_new') }}">Create a new brand</a>
    
{% endblock %}
